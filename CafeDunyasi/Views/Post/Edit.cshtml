@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model CafeDunyasi.Models.Posts

@{
    ViewData["Title"] = @localizer["Edit"];
}



<h1>@ViewData["Title"]</h1>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input asp-for="Date" class="form-control" hidden />
    <input asp-for="Image" class="form-control" hidden />
    <input asp-for="LikeCount" class="form-control" hidden />
    <input asp-for="UserID" class="form-control" hidden />
    <div class="postSingle">
        <div class="up">
        </div>
        <img src="@("~/images/BusinessImages/post/" + Model.Image)" class="img" asp-append-version="true" />
        <div class="bottom">
            <dl class="row">
                <dt class="col-sm-2">
                    @localizer["Description"]:
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Description" class="form-control" />
                </dd>
            </dl>
            <div class="form-group">
                @localizer["Date"]
                @Model.Date
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="margin-left:15px">
            <input type="submit" value="@localizer["Save"]" class="btn btn-success" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary" style="margin-right:10px">@localizer["ReturnToPosts"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
