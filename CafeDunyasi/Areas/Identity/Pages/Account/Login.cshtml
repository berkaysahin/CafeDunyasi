@page
@model LoginModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Login"];
}

@{
    Layout = "~/Views/Shared/_LoginSignupLayout.cshtml";
}

<h1 style="color: white">Cafe Dünyası</h1>
<center>
    <br />
    <partial name="_Culture" />
</center>
<div class="container">
    <div class="col-md-12">
        <section>
            <br />

            <form class="form-horizontal templatemo-login-form-2" role="form" id="account" method="post">
                <div class="row">
                    <div class="col-md-12">
                        <h1>@localizer["Login"]</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="templatemo-one-signin col-md-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    @localizer["Email"]
                                    <div class="templatemo-input-icon-container">
                                        <i class="fa fa-user"></i>
                                        <input asp-for="Input.Email" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    @localizer["Password"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.Password" class="form-control" />
                                        <i class="fa fa-lock"></i>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @localizer["RememberMe"]
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-warning">@localizer["Login"]</button>
                            </div>
                        </div>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@localizer["Register"]</a>
                        </p>
                    </div>
                    <div class="templatemo-other-signin col-md-6">
                        <label class="margin-bottom-15">
                            @localizer["Welcome"]
                        </label>
                        <a class="btn btn-block margin-bottom-15">
                            <i class="fa fa-square" style="color:whitesmoke"></i> @localizer["SeeMenu"]
                        </a>
                        <a class="btn btn-block margin-bottom-15">
                            <i class="fa fa-square" style="color:whitesmoke"></i> @localizer["Presentations"]
                        </a>
                        <a class="btn btn-block">
                            <i class="fa fa-square" style="color:whitesmoke"></i> @localizer["Favorites"]
                        </a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}