@{
    int i = 0;
}

@if(Model.Any())
{
    @foreach (var item in Model)
    {

        if (i % 2 == 0)
        {
            <div style="clear:left;"></div>
        }
        i++;


        <div class="post">
            <div class="up">
                @*<img src="@("~/images/BusinessImages/post/" + item.Image)" style="height:40px; width:auto; border-radius:20px" />
                    Berkay Şahin*@
            </div>
            <img src="@("~/images/BusinessImages/post/" + item.Image)" class="img" asp-append-version="true" />
            <div class="bottom">
                @if (item.Description != "" && item.Description != null)
                {
                <div>Description: @item.Description</div>
                }

                <i class="fa fa-heart" style="font-size:24px"></i> 5234
            </div>
        </div>
    }
}
else
{
    <font style="font-size:28px">No posts yet.</font>
}

