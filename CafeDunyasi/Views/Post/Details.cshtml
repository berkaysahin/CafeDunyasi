@model CafeDunyasi.Models.Posts

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Posts</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <img src="@("~/images/BusinessImages/post/" + Model.Image)" asp-append-version="true" />
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Model.Date
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
