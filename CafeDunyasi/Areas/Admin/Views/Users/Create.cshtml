@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model CafeDunyasi.Areas.Admin.Controllers.UsersController

@{
    ViewData["Title"] = localizer["Create"];
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <section>
            <form method="post" class="form-horizontal templatemo-login-form-2">
                <div class="row">
                    <div class="col-md-12">
                        <h1>@ViewData["Title"]</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="templatemo-one-signin col-md-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @localizer["Name"] @*<label asp-for="Input.Name" class="control-label"></label>*@
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.Name" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">

                                <div class="form-group">
                                    @localizer["Surname"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.Surname" class="form-control" required />
                                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">

                                <div class="form-group">
                                    @localizer["Email"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.Email" class="form-control" required />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @localizer["Password"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.Password" class="form-control" required />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @localizer["ConfirmPassword"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" required />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-warning">@localizer["Register"]</button> |
                                <a asp-action="Index" class="btn btn-primary">@localizer["BackToList"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>