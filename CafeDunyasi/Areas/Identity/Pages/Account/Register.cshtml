@page
@model RegisterModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Register"];
}

@{
    Layout = "~/Views/Shared/_LoginSignupLayout.cshtml";
}

<h1 style="color: white">Cafe Dünyası</h1>
<center>
    <br />
    <partial name="_Culture" />
</center>
<div class="container">
    <div class="col-md-12">
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal templatemo-login-form-2">
                <div class="row">
                    <div class="col-md-12">
                        <h1>@ViewData["Title"]</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="templatemo-one-signin col-md-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    @localizer["Name"] @*<label asp-for="Input.Name" class="control-label"></label>*@
                                    <div class="templatemo-input-icon-container">
                                        <i class="fa fa-user"></i>
                                        <input asp-for="Input.Name" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    @localizer["Surname"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.Surname" class="form-control" />
                                        <i class="fa fa-lock"></i>
                                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    @localizer["Email"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.Email" class="form-control" />
                                        <i class="fa fa-lock"></i>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    @localizer["Password"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.Password" class="form-control" />
                                        <i class="fa fa-lock"></i>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    @localizer["ConfirmPassword"]
                                    <div class="templatemo-input-icon-container">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                                        <i class="fa fa-lock"></i>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-warning">@localizer["Register"]</button>
                            </div>
                        </div>
                        <p>
                            <a asp-page="./Login">@localizer["Already"]</a>
                        </p>
                    </div>
                    <div class="templatemo-other-signin col-md-6">
                        <label class="margin-bottom-15">
                            @localizer["Welcome"]
                        </label>
                        <a class="btn btn-block margin-bottom-15">
                            <i class="fa fa-square" style="color:whitesmoke"></i>@localizer["SeeMenu"]
                        </a>
                        <a class="btn btn-block margin-bottom-15">
                            <i class="fa fa-square" style="color:whitesmoke"></i>@localizer["Presentations"]
                        </a>
                        <a class="btn btn-block">
                            <i class="fa fa-square" style="color:whitesmoke"></i>@localizer["Favorites"]
                        </a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
