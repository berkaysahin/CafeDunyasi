@*@model CafeDunyasi.Models.BusinessInfo*@
@model CafeDunyasi.Areas.Admin.Controllers.BusinessAccountsController.InputModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["BusinessAccounts"] + " - " + localizer["Edit"];
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<string> cities = (List<string>)ViewData["Cities"];
    string profileImg = ViewBag.profileImg;
    string menuImg = ViewBag.menuImg;
}

<h1>@localizer["Edit"]</h1>

<h4>@localizer["BusinessInfo"]</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                @localizer["BusinessName"]
                <input asp-for="BusinessName" class="form-control" required multiple />
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @localizer["City"]
                @*<input asp-for="Input.City" class="form-control" multiple />*@
                <select asp-for="City" class="form-control" asp-items="new SelectList(cities)">
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <img src="@("~/images/BusinessImages/profile/" + profileImg)" asp-append-version="true" />
            <div class="form-group">
                @localizer["ProfileImage"]
                    <input asp-for="ProfileImageUpdate" class="form-control" multiple />
                    <span asp-validation-for="ProfileImageUpdate" class="text-danger"></span>
            </div>
            <img src="@("~/images/BusinessImages/menu/" + menuImg)" asp-append-version="true" />
            <div class="form-group">
                @localizer["MenuImage"]
                    <input asp-for="MenuImageUpdate" class="form-control" multiple />
                    <span asp-validation-for="MenuImageUpdate" class="text-danger"></span>
            </div>
            
                <button id="update-profile-button" name="button" value="Update" class="btn btn-warning">@localizer["Update"]</button>
        </form>
    </div>
</div>