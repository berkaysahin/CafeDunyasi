@model CafeDunyasi.Models.Posts

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
<div class="postSingle">
        <div class="up">
        </div>
        <img src="@("~/images/BusinessImages/post/" + Model.Image)" class="img" asp-append-version="true" />
        <div class="bottom">
            <dl class="row">
                <dt class="col-sm-2">
                    Description:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                @Html.DisplayFor(model => model.Date)
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-right:10px" />|
        <a asp-action="Index" class="btn btn-primary" style="margin-left:10px">Back to Posts</a>
    </form>
</div>
